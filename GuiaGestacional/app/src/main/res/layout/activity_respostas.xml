<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    tools:context="com.scriptpoin.guiagestacional.gestacao.modelo_duvida_resposta.RespostasActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/layoutDecime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:minHeight="90dp"
            android:orientation="vertical"
            android:padding="5dp">

            <ScrollView
                android:id="@+id/svTextoResposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="14dp">

                <TextView
                    android:id="@+id/respostaTrimestre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

            </ScrollView>

            <Button
                android:id="@+id/btVoltarResposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/bt_consulta"
                android:elevation="6dp"
                android:stateListAnimator="@null"
                android:text="voltar"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
