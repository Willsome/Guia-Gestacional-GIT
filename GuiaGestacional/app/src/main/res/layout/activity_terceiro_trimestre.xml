<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scriptpoin.guiagestacional.gestacao.trimestre.PrimeiroTrimestreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/ivPerguntas"
            android:src="@drawable/trimestre3_"
            android:layout_width="325dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvTempoApGrValor"
            />

        <TextView
            android:text="(imagem ilustrativa)"
            android:textSize="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPerguntas"
            android:layout_marginTop="-8dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvTempoApGrTitulo"
            android:text="Tempo Aproximado da Gravidez"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvTempoApGrValor"
            android:text="- de 28 à 42 semanas -"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTempoApGrTitulo"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/llTempoApGr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPerguntas"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:text="SEMANAS"
                android:textColor="#f44336"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

            <TextView
                android:text="MÊS"
                android:textColor="#f44336"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTempoApGrMes1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTempoApGr"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:text="31 semanas e meia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

            <TextView
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTempoApGrMes2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTempoApGrMes1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:text="36 semanas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

            <TextView
                android:text="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTempoApGrMes3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTempoApGrMes2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="40 semanas e meia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

            <TextView
                android:text="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="center"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPerguntasTitulo"
            android:text="Dúvidas Frequentes:"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/llTempoApGrMes3"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/llPerguntasTrimestre1"
            android:layout_below="@+id/tvPerguntasTitulo"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>


    </RelativeLayout>

</ScrollView>
